<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorViolet</item>
        <item name="android:label">casual</item>
        <item name="colorPrimaryDark">@color/colorViolet</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="colorButtonNormal">@color/colorAccentLight</item>
        <item name="android:textColor">@color/white</item>
        <item name="buttonStyle">@style/AppTheme.Button</item>
    </style>

    <style name="AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorAccentLight</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">casual</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
