<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/colorOrange"
    android:backgroundTintMode="src_atop"
    tools:context=".PlayFragment">

    <!-- TODO: Update blank fragment layout -->

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:rowCount="1">

        <android.support.v7.widget.CardView
            android:layout_width="40dp"
            android:layout_height="120dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginTop="140dp"
            android:layout_margin="12dp"
            app:cardBackgroundColor="@color/colorOrange2"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="0dp">

                <ImageButton
                    android:id="@+id/bImage"
                    android:layout_width="87dp"
                    android:layout_height="85dp"
                    android:background="@drawable/bg6" />
                <Button
                    android:id="@+id/bbImage"
                    android:theme="@style/AppTheme.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/atma"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:text="Image Play" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="40dp"
            android:layout_height="120dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginTop="140dp"
            android:layout_margin="12dp"
            app:cardBackgroundColor="@color/colorOrange2"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="0dp">

                <ImageButton
                    android:id="@+id/bVideo"
                    android:layout_width="88dp"
                    android:layout_height="86dp"
                    android:background="@drawable/test" />
                <Button
                    android:id="@+id/bbVideo"
                    android:theme="@style/AppTheme.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/atma"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:text="Video Play" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </GridLayout>

</android.support.constraint.ConstraintLayout>