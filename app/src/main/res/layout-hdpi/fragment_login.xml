<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login_layout"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg3"
    android:backgroundTint="@color/colorOrange"
    android:backgroundTintMode="screen"
    android:layout_centerVertical="true"
    tools:context=".LoginFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.CardView
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="@color/colorOrange"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <EditText
                android:id="@+id/editLogEmail"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:background="@color/colorOrange"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/atma"
                android:textStyle="bold"
                android:textSize="10dp"
                android:hint="Email" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="57dp"
        app:cardBackgroundColor="@color/colorOrange"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <EditText
                android:id="@+id/editLogPassword"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:background="@color/colorOrange"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Password"
                android:fontFamily="@font/atma"
                android:textStyle="bold"
                android:textSize="10dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="90dp"
        app:cardBackgroundColor="@color/colorAccentLight"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <Button
                android:theme="@style/AppTheme.Button"
                android:id = "@+id/loginButton"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_margin="1dp"
                android:background="@color/colorAccentLight"
                android:fontFamily="@font/atma"
                android:textStyle="bold"
                android:textSize="10dp"
                android:text="Login" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="115dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/atma"
        android:textStyle="bold"
        android:textSize="5dp"
        android:text="New User? Register Here">
    </TextView>

    <ProgressBar
        android:id="@+id/progLoginBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textRegister"
        android:layout_marginTop="108dp"
        android:visibility="invisible" />

</RelativeLayout>