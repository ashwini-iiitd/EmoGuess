<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg8"
    android:keepScreenOn="true"
    android:backgroundTint="@color/colorOrange"
    android:backgroundTintMode="screen"
    tools:context=".VideoFragment">

    <com.mobilecomp.viswa.emoguess.HorizontalViewPagerVideo xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/viewPagerVideo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:screenOrientation="landscape" />

    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/countdown_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|end"
        android:gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/atma"
        android:textStyle="bold"
        android:text="1:00"
        android:textSize="12dp"
        android:textColor="@color/colorOrange2"
        android:layout_alignParentRight="@id/viewPagerVideo" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardvideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginRight="2dp"
        android:layout_gravity="center_horizontal|end"
        android:layout_alignRight="@id/viewPagerVideo"
        android:layout_below="@id/countdown_text"
        app:cardBackgroundColor="@color/colorAccentLight"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <Button
                android:id="@+id/countdown_button"
                android:theme="@style/AppTheme.Button"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:fontFamily="@font/atma"
                android:textStyle="bold"
                android:textSize="7dp"
                android:text="Start" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ImageButton
        android:id="@+id/left_nav"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal|start"
        app:srcCompat="@drawable/ic_action_left"
        android:visibility="gone"
        android:background="@null"
        android:layout_below="@id/cardvideo"
        android:layout_alignLeft="@id/viewPagerVideo" />

    <ImageButton
        android:id="@+id/right_nav"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal|end"
        android:fadingEdge="horizontal"
        app:srcCompat="@drawable/ic_action_right"
        android:background="@null"
        android:layout_below="@id/cardvideo"
        android:layout_alignRight="@id/viewPagerVideo" />

</RelativeLayout>