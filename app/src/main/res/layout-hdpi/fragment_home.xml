<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    android:orientation="vertical"
    android:background="@drawable/bg8"
    android:backgroundTint="@color/colorOrange"
    android:backgroundTintMode="screen"
    android:layout_centerVertical="true">

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:rowCount="1">

        <android.support.v7.widget.CardView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginTop="50dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="7dp"
            app:cardBackgroundColor="@color/colorOrange2"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="0dp">

                <ImageButton
                    android:id="@+id/pb"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:background="@color/colorOrange2"
                    android:src="@drawable/play" />

                <Button
                    android:id="@+id/bPlay"
                    android:layout_width="43dp"
                    android:layout_height="28dp"
                    android:fontFamily="@font/atma"
                    android:text="Play"
                    android:textSize="5dp"
                    android:textStyle="bold"
                    android:theme="@style/AppTheme.Button" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginTop="50dp"
            android:layout_margin="12dp"
            app:cardBackgroundColor="@color/colorOrange2"
            app:cardCornerRadius="7dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="0dp">

                <ImageButton
                    android:id="@+id/ib"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:layout_marginLeft="0dp"
                    android:background="@color/colorOrange2"
                    android:src="@drawable/howtoplay" />

                <Button
                    android:id="@+id/bHowto"
                    android:layout_width="58dp"
                    android:layout_height="28dp"
                    android:text="Instructions"
                    android:fontFamily="@font/atma"
                    android:textSize="5dp"
                    android:textStyle="bold"
                    android:theme="@style/AppTheme.Button"
                    android:typeface="serif" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </GridLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/sh"
        android:layout_width="24dp"
        android:layout_height="18dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_below="@+id/grid"
        android:layout_marginLeft="82dp"
        app:cardBackgroundColor="@color/colorAccentLight"
        app:cardCornerRadius="2dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/share"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:theme="@style/AppTheme.Button"
                app:srcCompat="@drawable/ic_share_small" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="40dp"
        android:layout_height="18dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="155dp"
        app:cardBackgroundColor="@color/colorAccentLight"
        app:cardCornerRadius="2dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/bLogout"
                android:layout_width="44dp"
                android:layout_height="28dp"
                android:fontFamily="@font/atma"
                android:text="Logout"
                android:textSize="5dp"
                android:textStyle="bold"
                android:theme="@style/AppTheme.Button" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>