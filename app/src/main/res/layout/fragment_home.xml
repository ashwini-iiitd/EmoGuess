<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    android:orientation="vertical"
    android:background="@drawable/bg8"
    android:backgroundTint="@color/colorOrange"
    android:backgroundTintMode="screen"
    android:layout_centerVertical="true">

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:rowCount="1">

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginTop="@dimen/_150sdp"
            android:layout_margin="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_12sdp"
            app:cardBackgroundColor="@color/colorOrange2"
            app:cardElevation="@dimen/_13sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_6sdp">

                <ImageButton
                    android:id="@+id/pb"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_90sdp"
                    android:scaleType="fitCenter"
                    android:background="@color/colorOrange2"
                    android:src="@drawable/play" />

                <Button
                    android:id="@+id/bPlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/atma"
                    android:text="Play"
                    android:textSize="@dimen/_18ssp"
                    android:textStyle="bold"
                    android:theme="@style/AppTheme.Button" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginTop="@dimen/_150sdp"
            android:layout_margin="@dimen/_6sdp"
            app:cardCornerRadius="@dimen/_12sdp"
            app:cardBackgroundColor="@color/colorOrange2"
            app:cardElevation="@dimen/_13sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_6sdp">

                <ImageButton
                    android:id="@+id/ib"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_90sdp"
                    android:scaleType="fitCenter"
                    android:background="@color/colorOrange2"
                    android:src="@drawable/howtoplay" />

                <Button
                    android:id="@+id/bHowto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/atma"
                    android:text="Instructions"
                    android:textSize="@dimen/_18ssp"
                    android:textStyle="bold"
                    android:theme="@style/AppTheme.Button" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </GridLayout>



    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_130sdp"
        android:layout_marginTop="@dimen/_20sdp"
        app:cardBackgroundColor="@color/colorAccentLight"
        android:layout_below="@+id/grid"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_12sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/bLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/atma"
                android:textStyle="bold"
                android:textSize="@dimen/_15ssp"
                android:text="Logout"
                android:theme="@style/AppTheme.Button" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>