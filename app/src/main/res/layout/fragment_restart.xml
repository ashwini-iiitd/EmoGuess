    <android.support.v7.widget.CardView
        android:id="@+id/sc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_120sdp"
        android:layout_marginTop="@dimen/_140sdp"
        app:cardBackgroundColor="@color/colorOrange2"
        app:cardCornerRadius="@dimen/_12sdp"
        app:cardElevation="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_12sdp">

            <ImageButton
                android:id="@+id/bScore"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_57sdp"
                android:background="@drawable/score" />

            <Button
                android:id="@+id/Score"
                android:layout_width="@dimen/_62sdp"
                android:layout_height="@dimen/_35sdp"
                android:fontFamily="@font/atma"
                android:text="Score"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                android:theme="@style/AppTheme.Button" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/sh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_130sdp"
        android:layout_marginTop="@dimen/_13sdp"
        app:cardBackgroundColor="@color/colorAccentLight"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_9sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sc">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.Button"
                app:srcCompat="@drawable/ic_share" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_130sdp"
        android:layout_marginTop="@dimen/_13sdp"
        app:cardBackgroundColor="@color/colorAccentLight"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_9sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sh">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/bEndGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/atma"
                android:onClick="logout"
                android:text="Logout"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                android:theme="@style/AppTheme.Button" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

