    <ImageView
        android:layout_width="154dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/howto" />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginLeft="170dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="80dp"
        app:cardBackgroundColor="@color/colorOrange2"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/howtoparents"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/howto"
                android:layout_margin="10dp"
                android:fontFamily="casual"
                android:text="Parents: Hold the phone such that the screen faces the child and is not visible to you. For both, images and videos, shake/scroll to get the next one, and for every, guess the emotion based on how the child enacts it. Keep going till the timer stops. "
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="450dp"
        android:layout_marginRight="15dp"
        app:cardBackgroundColor="@color/colorOrange2"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/howtochildren"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:fontFamily="casual"
                android:text="Children: Carefully look at the image/video on the screen (with text below it as the hint). Enact the emotion shown by the image/video."
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>